{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"strict": true,
		"noImplicitOverride": true,
		"noUncheckedIndexedAccess": true,
		"outDir": "dist",
		"declaration": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true
	},
	"exclude": ["node_modules", "dist"]
}
